<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_main"
    android:backgroundTint="#D036174A"
    android:backgroundTintMode="src_atop"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Profile">


    <ImageView
        android:id="@+id/avatar_profile"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="373dp"
        android:contentDescription="@+string/avatarkayouknow"
        android:src="@drawable/prof_pic" />

    <TextView
        android:id="@+id/current_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/above"
        android:layout_marginBottom="278dp"
        android:gravity="center"
        android:text="Вы вошли как гость"
        android:textSize="20sp" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/above"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/radius_btn"
        android:gravity="center"
        android:text="Выход" />

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="start"
        android:orientation="vertical"
        android:background="@drawable/custombordertop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/press_start_2p"
            android:text="Профиль"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:id="@id/above"
        android:background="@drawable/customborderbottom"
        >

        <ImageButton
            android:id="@+id/home"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_marginRight="40dp"
            android:background="@drawable/home_icon_1"
            />

        <ImageButton
            android:id="@+id/lupa"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_marginRight="40dp"
            android:background="@drawable/zalupa_icon" />

        <ImageButton
            android:id="@+id/calendar"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_marginRight="40dp"
            android:background="@drawable/calendar_icon" />

        <ImageButton
            android:id="@+id/kubik"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ramdom_game_icon" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:background="@drawable/profile_icon" />
    </LinearLayout>
</RelativeLayout>