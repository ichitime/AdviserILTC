<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/avatar_profile"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="373dp"
        android:contentDescription="@+string/avatarkayouknow"
        android:src="@drawable/prof_pic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/above"
        android:layout_marginBottom="278dp"
        android:gravity="center"
        android:text="zakerdoom@gmail.com"
        android:textSize="20sp" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/above"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/radius_btn"
        android:gravity="center"
        android:text="Logout" />

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="0dp"
        android:gravity="start"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-32dp"
            android:fontFamily="@font/press_start_2p"
            android:text="Профиль"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:id="@+id/above">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/home" />

        <ImageButton
            android:id="@+id/lupa"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/lupa" />

        <ImageButton
            android:id="@+id/calendar"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/calendar" />

        <ImageButton
            android:id="@+id/kubik"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/kubik" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/profile" />
    </LinearLayout>
</RelativeLayout>