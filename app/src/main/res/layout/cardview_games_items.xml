<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="176dp"
    android:layout_height="144dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B38284D1">

            <ImageView
                android:id="@+id/game_img_id"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:scaleType="centerCrop">
            </ImageView>

            <TextView
                android:id="@+id/game_title_id"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"

                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="Game Title"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/game_img_id"
                app:layout_constraintBottom_toBottomOf="parent">

            </TextView>

            <TextView
                android:id="@+id/game_tags_id"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
               android:height="20dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="Adventure"
                app:layout_constraintTop_toBottomOf="@+id/game_title_id"
                app:layout_constraintBottom_toBottomOf="parent">

            </TextView>

            <TextView
                android:id="@+id/game_price_id"
                android:textAlignment="viewEnd"

                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="Game Price"
                app:layout_constraintTop_toBottomOf="@+id/game_tags_id"
                app:layout_constraintBottom_toBottomOf="parent">

            </TextView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>